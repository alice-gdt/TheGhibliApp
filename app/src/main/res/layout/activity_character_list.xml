<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterList">

    <Button
        android:id="@+id/back_to_menu"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/list_of_char"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/list_of_char"
        android:layout_width="1090dp"
        android:layout_height="444dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:divider="#000000"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/characters"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/character_list_emptylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This list is empty"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>